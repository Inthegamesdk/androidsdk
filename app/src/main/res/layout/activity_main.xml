<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp"
        tools:context=".MainActivity">

    <TextView
            android:text="Welcome to the IN THE GAME integration demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
        android:layout_marginBottom="50dp"/>

    <Button
            android:id="@+id/btnPlayer"
            android:text="Default full-screen controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9"
            android:textAllCaps="false"
            android:layout_margin="16dp"/>

    <Button
            android:id="@+id/btnExample"
            android:text="Custom integration example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9"
            android:textAllCaps="false"
            android:layout_margin="16dp"/>


    <Button
        android:id="@+id/btnOverlay"
        android:text="Overlay view example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:textAllCaps="false"
        android:layout_margin="16dp"/>

</LinearLayout>